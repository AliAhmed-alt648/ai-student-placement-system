# AI Student Placement System - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# OPENAI API
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o  # or gpt-4-turbo, gpt-3.5-turbo

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/placement_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# APPLICATION
# ============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
APP_NAME=AI Student Placement System
APP_VERSION=1.0.0

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# FILE UPLOAD
# ============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# ============================================================================
# S3 / MINIO (Optional)
# ============================================================================
USE_S3=false
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=placement-resumes
S3_REGION=us-east-1

# AWS S3 (Production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# ============================================================================
# CELERY
# ============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_ALWAYS_EAGER=false

# ============================================================================
# EMAIL (Optional - for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@placement-system.com

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
SENTRY_DSN=  # Optional: Sentry error tracking

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# AI/ML MODELS
# ============================================================================
SENTENCE_TRANSFORMER_MODEL=all-mpnet-base-v2
SPACY_MODEL=en_core_web_sm
USE_ML_LEVEL_CLASSIFIER=false  # Set to true when model is trained

# ============================================================================
# INTERVIEW CONFIGURATION
# ============================================================================
INTERVIEW_TOTAL_QUESTIONS=10
INTERVIEW_MCQ_COUNT=4
INTERVIEW_SCENARIO_COUNT=3
INTERVIEW_TECHNICAL_COUNT=3
INTERVIEW_TIME_LIMIT_MINUTES=30

# ============================================================================
# MATCHING WEIGHTS
# ============================================================================
MATCH_WEIGHT_SKILLS=0.60
MATCH_WEIGHT_EXPERIENCE=0.25
MATCH_WEIGHT_EDUCATION=0.15

# ============================================================================
# FRONTEND
# ============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_ENABLE_ANALYTICS=false

# ============================================================================
# SECURITY
# ============================================================================
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Password hashing
BCRYPT_ROUNDS=12

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_VIDEO_INTERVIEWS=false
ENABLE_BEHAVIOR_TRACKING=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# ============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================================================
# LinkedIn API
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# DEVELOPMENT
# ============================================================================
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false
